.col-md-10
  %br
  %h2 Editing #{@report.report_name} Report
  %br

  %form{ :method => "post", :action => "/admin/add_user/#{@report.id}" }
    %h3 Current Authors
    .table.table-striped
      %table{ :style => "width: 50%" }
        %tr
          %td
            #{@report.owner}
          %td
            &nbsp;
        - if @report.authors
          - @report.authors.each do |user|
            %tr
              %td
                #{user}
              %td
                %a.btn.btn-danger{ :href => "/admin/del_user_report/#{@report.id}/#{user}" }
                  %i.icon-remove.icon-white{ :title => "Remove Author" }

    %br
    %label.col-md-3{ :for => "author" }
      Add Collaborator
      %select#author{ :name => "author" }
        - @users.each do |user|
          %option #{user.username}

    %br
    %input.btn.btn-default{ :type => "submit", :value => "Add" }
    %a.btn.btn-default{ :href => "/reports/list" }
      Cancel
