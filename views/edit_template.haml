.col-md-10
  %br
  %h2 Edit Template
  %br

  %form{ :method => "post", :action => "/admin/templates/edit", :enctype => "multipart/form-data" }
    %table
      %tr
        %td
          %label.col-md-3{ :for => "report_type" }
            Report Type &nbsp;
        %td
          %input#report_type{ :type => "text", :name => "report_type", :required => true, :value => "#{@template.report_type}" }
      %tr
        %td
          %label.col-md-3{ :for => "description" }
            File Description &nbsp;
        %td
          %input#description{ :type => "text", :name => "description", :value => "#{@template.description}" }
      %tr
        %td
          %label.col-md-3{ :for => "finding_template" }
            Finding Template &nbsp;
        %td
          %input#finding_template{ :type => "checkbox", :name => "finding_template" }
      %tr
        %td
          %label.col-md-3{ :for => "status_template" }
            Status Template &nbsp;
        %td
          %input#status_template{ :type => "checkbox", :name => "status_template" }
      %tr
        %td
          %label.col-md-3{ :for => "file" }
            DOCX
        %td
          %input#file{ :type => "file", :name => "file", :required => true }
    %input{ :type => "hidden", :name => "id", :value => "#{@template.id}" }

    %br
    %input.btn.btn-default{ :type => "submit", :value => "Modify" }
    %a.btn.btn-default{ :href => "/admin/templates" }
      Cancel
