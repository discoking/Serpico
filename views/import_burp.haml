.col-md-10
  - if not @burpmap
    Burp Auto Mapping not enabled. Contact your administrator to enable.
  - else
    %br
    %h2 Auto Add Findings from Burp scanner report (XML only)
    %br

    %form{ :method => "post", :action => "/report/#{@report.id}/import_autoadd", :enctype => "multipart/form-data" }
      %table
        %tr
          %td
            %label.col-md-3{ :for => "file" }
              Upload burp scanner report file (XML only).&nbsp;
            %input#file{ :type => "file", :name => "file" }
      %br
      %input{ :type => "hidden", :name => "type", :value => "burp" }

      %br
      %input.btn.btn-default{ :type => "submit", :value => "Upload" }
      %a.btn.btn-default{ :href => "/report/#{@report.id}/additional_features" }
        Cancel
